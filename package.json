{
  "name": "dbudget",
  "version": "0.0.1",
  "type": "module",
  "description": "",
  "browser": "index.js",
  "engines": {
    "node": ">=10",
    "pnpm": ">=3"
  },
  "watch": {
    "elm-ts-interop": "src/InteropDefinitions.elm"
  },
  "scripts": {
    "postinstall": "elm-tooling install",
    "dev": "concurrently \"elm-watch hot\" \"pnpm watch\" \"vite\"",
    "build": "elm-watch make --optimize && pnpm elm-ts-interop && tsc && vite build",
    "review": "npx elm-review --fix-all",
    "watch": "npm-watch",
    "elm-ts-interop": "elm-ts-interop --output ./src/app/elm-ts-interop.d.ts",
    "lint-ts": "eslint ./src/**/*.ts --fix",
    "lint-css": "stylelint ./src/**/*.css --fix",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "test-elm": "elm-test-rs",
    "test-vite": "vitest",
    "test": "pnpm run test-elm && pnpm run test-vite",
    "check": "pnpm format && pnpm lint-ts && pnpm lint-css && pnpm type-check && pnpm test",
    "up-deps": "npm-check-updates -u"
  },
  "author": "Artsiom Shamsutdzinau <shamsartem@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "@automerge/automerge": "^2.1.3",
    "@automerge/automerge-repo": "^1.0.2",
    "@automerge/automerge-repo-network-broadcastchannel": "^1.0.2",
    "@automerge/automerge-repo-network-websocket": "^1.0.2",
    "@automerge/automerge-repo-storage-indexeddb": "^1.0.2",
    "@automerge/automerge-wasm": "^0.2.14",
    "@lion/combobox": "^0.11.1",
    "@lion/listbox": "^0.14.1",
    "lit": "^2.8.0"
  },
  "devDependencies": {
    "@tsconfig/strictest": "^2.0.2",
    "@types/uglify-js": "^3.17.2",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "concurrently": "^8.2.1",
    "elm-review": "^2.10.2",
    "elm-tooling": "^1.14.1",
    "elm-ts-interop": "^0.0.8",
    "elm-watch": "^1.1.2",
    "esbuild": "^0.19.3",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-unused-imports": "^3.0.0",
    "npm-check-updates": "^16.14.4",
    "npm-watch": "^0.11.0",
    "postcss": "^8.4.30",
    "postcss-preset-env": "^9.1.4",
    "prettier": "^3.0.3",
    "stylelint": "^15.10.3",
    "stylelint-config-idiomatic-order": "^9.0.0",
    "stylelint-config-standard": "^34.0.0",
    "typescript": "^5.2.2",
    "uglify-js": "^3.17.4",
    "vite": "4.4.9",
    "vite-plugin-pwa": "^0.16.5",
    "vite-plugin-top-level-await": "^1.3.1",
    "vite-plugin-wasm": "^3.2.2",
    "vitest": "^0.34.5"
  },
  "prettier": {
    "trailingComma": "all",
    "semi": false,
    "singleQuote": true
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": [
        "./tsconfig.json",
        "./tsconfig.eslint.json"
      ]
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/strict-type-checked",
      "plugin:import/recommended",
      "plugin:import/typescript",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint",
      "import",
      "unused-imports"
    ],
    "rules": {
      "eqeqeq": [
        "error",
        "always"
      ],
      "no-console": [
        "error"
      ],
      "arrow-body-style": [
        "error",
        "always"
      ],
      "no-empty": [
        "error",
        {
          "allowEmptyCatch": true
        }
      ],
      "no-plusplus": "error",
      "operator-assignment": [
        "error",
        "never"
      ],
      "curly": [
        "error",
        "all"
      ],
      "no-unused-expressions": [
        "error"
      ],
      "dot-notation": [
        "off"
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "padding-line-between-statements": [
        "error",
        {
          "blankLine": "always",
          "prev": "multiline-expression",
          "next": "*"
        },
        {
          "blankLine": "always",
          "prev": "*",
          "next": "multiline-expression"
        },
        {
          "blankLine": "always",
          "prev": "multiline-block-like",
          "next": "*"
        },
        {
          "blankLine": "always",
          "prev": "*",
          "next": "multiline-block-like"
        },
        {
          "blankLine": "always",
          "prev": "multiline-const",
          "next": "*"
        },
        {
          "blankLine": "always",
          "prev": "*",
          "next": "multiline-const"
        },
        {
          "blankLine": "always",
          "prev": "multiline-let",
          "next": "*"
        },
        {
          "blankLine": "always",
          "prev": "*",
          "next": "multiline-let"
        },
        {
          "blankLine": "any",
          "prev": "case",
          "next": "case"
        }
      ],
      "import/extensions": [
        "error",
        "always"
      ],
      "import/no-unresolved": "off",
      "import/no-cycle": [
        "error"
      ],
      "import/order": [
        "error",
        {
          "newlines-between": "always",
          "alphabetize": {
            "order": "asc",
            "caseInsensitive": true
          }
        }
      ],
      "unused-imports/no-unused-imports": "error",
      "@typescript-eslint/explicit-member-accessibility": [
        "error",
        {
          "accessibility": "no-public"
        }
      ],
      "@typescript-eslint/strict-boolean-expressions": [
        "error",
        {
          "allowString": false,
          "allowNumber": false,
          "allowNullableObject": false,
          "allowNullableBoolean": false,
          "allowNullableString": false,
          "allowNullableNumber": false,
          "allowAny": false
        }
      ],
      "@typescript-eslint/consistent-type-assertions": [
        "error",
        {
          "assertionStyle": "never"
        }
      ]
    }
  },
  "eslintIgnore": [
    "/node_modules",
    "/dist"
  ],
  "postcss": {
    "plugins": {
      "postcss-preset-env": {}
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-idiomatic-order"
    ],
    "rules": {
      "at-rule-empty-line-before": [
        "always",
        {
          "except": [
            "inside-block",
            "blockless-after-same-name-blockless"
          ]
        }
      ],
      "declaration-block-no-duplicate-properties": true,
      "selector-class-pattern": null,
      "custom-media-pattern": null
    }
  },
  "stylelintIgnore": [
    "dist"
  ]
}
