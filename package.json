{
  "name": "dbudget",
  "version": "0.0.1",
  "description": "",
  "browser": "index.js",
  "scripts": {
    "postinstall": "elm-tooling install",
    "dev": "run-pty % elm-watch hot % vite",
    "build": "elm-watch make --optimize && tsc && vite build",
    "start": "vite preview",
    "serve-https": "serve dist",
    "lint-ts": "eslint ./src/**/*.ts --fix",
    "lint-css": "stylelint ./src/**/*.css --fix",
    "type-check": "tsc --noEmit",
    "test": "elm-test",
    "check": "npm run lint-ts && npm run lint-css && npm run type-check"
  },
  "author": "Artsiom Shamsutdzinau <shamsartem@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@tsconfig/strictest": "^1.0.2",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "elm": "^0.19.1-6",
    "elm-test": "^0.19.1-revision7",
    "esbuild": "^0.27.1",
    "eslint": "^8.28.0",
    "eslint-plugin-compat": "^4.0.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "https-localhost": "^4.7.1",
    "postcss-nested": "^6.0.0",
    "postcss-preset-env": "^7.8.3",
    "stylelint": "^14.15.0",
    "stylelint-config-idiomatic-order": "^9.0.0",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-no-unsupported-browser-features": "^6.0.1",
    "typescript": "^4.9.3",
    "uglify-js": "^3.17.4",
    "vite": "^3.2.11",
    "vite-plugin-pwa": "^0.13.3"
  },
  "browserslist": [
    "last 2 chrome version",
    "last 2 firefox version",
    "last 2 safari version"
  ],
  "dependencies": {
    "ajv": "^8.11.2",
    "buffer": "^6.0.3",
    "elm-tooling": "^1.10.0",
    "elm-watch": "^1.1.0",
    "jszip": "^3.10.1",
    "run-pty": "^4.0.3",
    "socket.io-client": "^4.5.4"
  },
  "prettier": {
    "trailingComma": "all",
    "semi": false,
    "singleQuote": true
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "import",
      "unused-imports"
    ],
    "extends": [
      "plugin:compat/recommended",
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:import/recommended",
      "plugin:import/typescript"
    ],
    "rules": {
      "eqeqeq": "error",
      "@typescript-eslint/explicit-function-return-type": [
        "warn",
        {
          "allowExpressions": false,
          "allowTypedFunctionExpressions": false,
          "allowHigherOrderFunctions": false,
          "allowDirectConstAssertionInArrowFunctions": false,
          "allowConciseArrowFunctionExpressionsStartingWithVoid": false
        }
      ],
      "@typescript-eslint/explicit-member-accessibility": [
        "error",
        {
          "accessibility": "no-public"
        }
      ],
      "@typescript-eslint/strict-boolean-expressions": [
        "error",
        {
          "allowString": false,
          "allowNumber": false,
          "allowNullableObject": false,
          "allowNullableBoolean": false,
          "allowNullableString": false,
          "allowNullableNumber": false,
          "allowAny": false
        }
      ],
      "@typescript-eslint/consistent-type-assertions": [
        "error",
        {
          "assertionStyle": "never"
        }
      ],
      "@typescript-eslint/no-extra-semi": [
        "off"
      ],
      "no-console": [
        "error",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ],
      "import/order": [
        "error",
        {
          "newlines-between": "always"
        }
      ],
      "import/no-default-export": "error",
      "unused-imports/no-unused-imports": "error"
    },
    "env": {
      "browser": true
    },
    "overrides": [
      {
        "files": [
          "*.ts",
          "*.tsx"
        ],
        "extends": [
          "plugin:@typescript-eslint/recommended",
          "plugin:@typescript-eslint/recommended-requiring-type-checking"
        ],
        "parserOptions": {
          "project": [
            "./tsconfig.json"
          ]
        }
      }
    ]
  },
  "eslintIgnore": [
    "/node_modules",
    "/dist"
  ],
  "postcss": {
    "plugins": {
      "postcss-preset-env": {},
      "postcss-nested": {}
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-idiomatic-order"
    ],
    "plugins": [
      "stylelint-no-unsupported-browser-features"
    ],
    "rules": {
      "plugin/no-unsupported-browser-features": [
        true,
        {
          "severity": "warning"
        }
      ],
      "at-rule-empty-line-before": [
        "always",
        {
          "except": [
            "inside-block"
          ]
        }
      ],
      "declaration-block-no-duplicate-properties": true,
      "selector-class-pattern": null,
      "custom-media-pattern": null
    }
  },
  "stylelintIgnore": [
    "dist"
  ]
}
